profiles {

    standard {
        includeConfig 'config/executor/standard.config'
    }

    // Reserves 4 cpus reserved for very fast tasks and nextflow process
    // maximum of 108 cpus for slurm submitted jobs
    cos_hpc_4_node {
        includeConfig 'config/executor/cos-hpc-4-node.config'
    }

    test {
      includeConfig 'config/test.config'
    }

    cos_hpc_1_node {
      includeConfig 'config/executor/cos-hpc-1-node-local.config'
    }

}

manifest {
    homePage = 'https://github.com/J-81/masterProject'
    description = 'RNA-Seq Pipeline for Document GL-DPPD-7101-C'
    mainScript = 'main.nf'
    defaultBranch = 'main'
    version = '0.1.0'
}
